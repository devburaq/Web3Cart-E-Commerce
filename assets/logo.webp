/* --- CHAMELEON (UNIVERSAL COMMERCE) SECTION --- */
.geo-section {
    background-color: var(--bg-body);
    padding: 100px 20px;
    font-family: var(--font-family);
    color: var(--text-dark);
    overflow: hidden;
}

.geo-container {
    max-width: 1000px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* HEADER */
.geo-header {
    text-align: center;
    margin-bottom: 60px;
    max-width: 700px;
}

.geo-badge {
    color: var(--color-green);
    border: 1px solid var(--color-green);
    padding: 5px 15px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 2px;
    text-transform: uppercase;
}

.geo-title {
    font-size: 3rem;
    margin-top: 20px;
    margin-bottom: 20px;
    font-weight: 800;
    line-height: 1.1;
}

.geo-header .highlight {
    color: var(--color-green);
}

.geo-desc {
    color: var(--text-light);
    font-size: 1.2rem;
    line-height: 1.6;
}

/* CHAMELEON WRAPPER */
.chameleon-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 40px;
    perspective: 1000px;
}

/* CARD DESIGN */
.product-card {
    background: var(--bg-card);
    width: 380px;
    border-radius: 20px;
    padding: 25px;
    border: 1px solid var(--border-color);
    position: relative;
    transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275), border-color 0.3s;
    box-shadow: var(--shadow-card);
}

.card-glow {
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: radial-gradient(circle, rgba(0, 255, 136, 0.2) 0%, transparent 70%);
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s;
}

.product-card:hover .card-glow {
    opacity: 1;
}

.product-card:hover {
    border-color: var(--color-green);
    transform: translateY(-5px);
    box-shadow: var(--shadow-hover);
}

.card-image {
    height: 250px;
    background: var(--bg-light);
    border-radius: 12px;
    margin-bottom: 25px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
}

.card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
}

.product-card:hover .card-image img {
    transform: scale(1.1);
}

/* DETAILS */
.detail-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.product-card h3 {
    margin: 0;
    font-size: 1.2rem;
    font-weight: 700;
    color: var(--text-dark);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.stock-badge {
    background: rgba(40, 167, 69, 0.1);
    color: var(--color-green);
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 1px;
    white-space: nowrap;
}

.prod-desc {
    color: var(--text-light);
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 25px;
    min-height: 3rem;
}

/* PRICE ROW & CRYPTO */
.price-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-top: 1px solid var(--border-color);
    padding-top: 20px;
}

.crypto-price-box {
    display: flex;
    align-items: center;
    gap: 8px;
}

.crypto-icon {
    color: var(--text-dark);
    font-size: 1.2rem;
}

.price-val {
    font-size: 1.4rem;
    font-weight: 800;
    color: var(--text-dark);
    font-family: 'Share Tech Mono', monospace;
}

.buy-btn {
    background: var(--color-green);
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 6px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.2s;
    text-transform: uppercase;
    font-size: 0.9rem;
    text-decoration: none;
    display: inline-block;
}

.buy-btn:hover {
    transform: scale(1.05);
    box-shadow: 0 0 15px var(--color-green);
    color: white;
}

/* CONTROLS */
.geo-controls {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: center;
}

.region-btn {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    color: var(--text-light);
    padding: 12px 20px;
    border-radius: 30px;
    cursor: pointer;
    font-weight: 600;
    font-size: 0.85rem;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 6px;
}

.region-btn:hover {
    border-color: var(--color-green);
    color: var(--text-dark);
}

.region-btn.active {
    background: var(--color-green);
    color: white;
    border-color: var(--color-green);
    box-shadow: 0 0 20px rgba(40, 167, 69, 0.3);
}

/* GLITCH ANIMATION */
.glitching {
    animation: cardGlitch 0.4s cubic-bezier(.25, .46, .45, .94) both infinite;
}

@keyframes cardGlitch {
    0% {
        transform: translate(0)
    }

    20% {
        transform: translate(-2px, 2px)
    }

    40% {
        transform: translate(-2px, -2px)
    }

    60% {
        transform: translate(2px, 2px)
    }

    80% {
        transform: translate(2px, -2px)
    }

    100% {
        transform: translate(0)
    }
}

@media (max-width: 600px) {
    .product-card {
        width: 100%;
    }

    .geo-title {
        font-size: 2rem;
    }
}

/* --- PERFORMANCE OPTIMIZATIONS (HARDWARE ACCELERATION) --- */
.product-card,
.core-card,
.feature-card,
.glossary-card,
.comparison-container,
.empire-wrapper,
#globeViz canvas,
#matrix-canvas {
    will-change: transform, opacity;
}

.core-section,
.geo-section,
.empire-section,
.truth-section,
.call-section {
