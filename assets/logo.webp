<script>
    /**
     * SMART CONTRACT SIMULATION
     */
    let simRunning = false;

    function runContractSimulation() {
        if (simRunning) return;
        simRunning = true;

        const overlay = document.getElementById('startOverlay');
        const packet1 = document.getElementById('packet1');
        const packet2 = document.getElementById('packet2');

        const buyer = document.querySelector('.node-buyer');
        const contract = document.querySelector('.node-contract');
        const seller = document.querySelector('.node-seller');

        const sBuyer = document.getElementById('statusBuyer');
        const sContract = document.getElementById('statusContract');
        const sSeller = document.getElementById('statusSeller');

        overlay.style.opacity = '0';
        setTimeout(() => overlay.style.display = 'none', 300);

        buyer.classList.add('active');
        sBuyer.innerText = "SENDING...";

        packet1.style.opacity = '1';
        packet1.style.animation = "contractTravel 1.5s linear forwards";

        setTimeout(() => {
            packet1.style.opacity = '0';
            buyer.classList.remove('active');
            sBuyer.innerText = "SENT";

            contract.classList.add('active');
            sContract.innerText = "LOCKED / VERIFYING";
            sContract.style.color = "#bc13fe";
        }, 1500);

        setTimeout(() => {
            sContract.innerText = "EXECUTED";

            packet2.style.opacity = '1';
            packet2.style.animation = "contractTravel 1.5s linear forwards";
        }, 3500);

        setTimeout(() => {
            packet2.style.opacity = '0';
            contract.classList.remove('active');

            seller.classList.add('active');
            sSeller.innerText = "RECEIVED (+100 USDT)";
            sSeller.style.color = "#00f3ff";
        }, 5000);

        setTimeout(() => {
            seller.classList.remove('active');
            sSeller.innerText = "PENDING";
            sBuyer.innerText = "READY";
            sContract.innerText = "WAITING";
            sContract.style.color = "#555";
            sSeller.style.color = "#555";

            packet1.style.animation = "none";
            packet2.style.animation = "none";

            overlay.style.display = 'flex';
            setTimeout(() => overlay.style.opacity = '1', 100);

            simRunning = false;
        }, 7000);
    }
</script>
