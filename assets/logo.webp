                overlay.style.opacity = "0";
                overlay.style.transform = "scale(1.1)";

                setTimeout(() => {
                    overlay.classList.remove('active');
                    overlay.style.display = 'none';
                    // Scroll to pricing section
                    document.getElementById('pricing').scrollIntoView({ behavior: 'smooth' });
                }, 500);

                sessionStorage.setItem('matrixChoiceMade', 'red');

            } else {
                sessionStorage.setItem('matrixChoiceMade', 'blue');
                overlay.classList.remove('active');
                // Just close modal and stay on page
                setTimeout(() => {
                    overlay.style.display = 'none';
                    if (overlay.matrixAnimationId) {
                        cancelAnimationFrame(overlay.matrixAnimationId);
                    }
                }, 300);
            }
        };

        /**
         * Scroll Trigger for Matrix Modal
