    color: #1a1a1a;
}

.proof-container {
    max-width: 1000px;
    margin: 0 auto;
}

.proof-header {
    text-align: center;
    margin-bottom: 50px;
}

.proof-title {
    font-size: 2.5rem;
    font-weight: 800;
    margin-bottom: 15px;
    color: #fff;
}

[data-theme="light"] .proof-title {
    color: #1a1a1a;
}

.proof-highlight {
    color: #00c6ff;
    text-shadow: 0 0 20px rgba(0, 198, 255, 0.4);
}

[data-theme="light"] .proof-highlight {
    text-shadow: none;
}

.proof-desc {
    color: #888;
    font-family: 'Share Tech Mono', monospace;
}

/* Transaction Table */
.tx-table-wrapper {
    background: #111;
    border: 1px solid #333;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
}

[data-theme="light"] .tx-table-wrapper {
    background: #fff;
    border-color: #ddd;
    box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
}

.tx-header-row {
    display: grid;
    grid-template-columns: 2fr 1.5fr 1fr 1fr 1fr;
    padding: 15px 20px;
    background: #1a1a1a;
    color: #666;
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.85rem;
    border-bottom: 1px solid #333;
}

[data-theme="light"] .tx-header-row {
    background: #f0f0f0;
    color: #666;
    border-color: #ddd;
}

.tx-scroll-container {
    height: 300px;
    overflow: hidden;
    position: relative;
}

.tx-row {
    display: grid;
    grid-template-columns: 2fr 1.5fr 1fr 1fr 1fr;
    padding: 12px 20px;
    border-bottom: 1px solid #222;
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.9rem;
    color: #ccc;
    animation: txSlideDown 0.5s ease-out;
    transition: background 0.3s;
}

[data-theme="light"] .tx-row {
    color: #333;
    border-color: #eee;
}

.tx-row:hover {
    background: rgba(0, 198, 255, 0.05);
}

.tx-hash {
    color: #00c6ff;
}

.tx-status {
    color: #00ff88;
    font-weight: bold;
}

@keyframes txSlideDown {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@media (max-width: 700px) {

    .tx-header-row,
    .tx-row {
        grid-template-columns: 2fr 1fr 1fr;
    }

    .tx-header-row span:nth-child(2),
    .tx-header-row span:nth-child(5),
    .tx-row span:nth-child(2),
    .tx-row span:nth-child(5) {
        display: none;
    }

    .proof-title {
        font-size: 1.8rem;
    }
}

/* ================== Smart Contract Visualizer Section ================== */
.logic-section {
    background: #0a0a0a;
    padding: 100px 20px;
    font-family: var(--font-family);
    color: #fff;
}

[data-theme="light"] .logic-section {
    background: #f5f5f5;
    color: #1a1a1a;
}

.logic-container {
    max-width: 1000px;
    margin: 0 auto;
    text-align: center;
}

.logic-header {
    margin-bottom: 60px;
}

.badge-code {
    color: #00f3ff;
    border: 1px solid #00f3ff;
    padding: 5px 15px;
    border-radius: 20px;
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.8rem;
    letter-spacing: 1px;
}

.logic-header h2 {
    font-size: 3rem;
    margin: 20px 0;
    font-weight: 800;
}

[data-theme="light"] .logic-header h2 {
    color: #1a1a1a;
}

.highlight-neon {
    color: #00f3ff;
    text-shadow: 0 0 20px rgba(0, 243, 255, 0.4);
}

[data-theme="light"] .highlight-neon {
    text-shadow: none;
}

.logic-header p {
    color: #888;
    max-width: 600px;
    margin: 0 auto;
    font-size: 1.1rem;
}

/* Circuit Board */
.circuit-board {
    background: #111;
    border: 1px solid #222;
    border-radius: 20px;
    padding: 50px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
    cursor: pointer;
    box-shadow: 0 0 50px rgba(0, 0, 0, 0.5);
}

[data-theme="light"] .circuit-board {
    background: #fff;
    border-color: #ddd;
    box-shadow: 0 5px 30px rgba(0, 0, 0, 0.1);
}

.circuit-board:hover {
    border-color: #333;
}

/* Nodes */
.node {
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 2;
    width: 180px;
}

.node-icon {
    width: 70px;
    height: 70px;
    background: #000;
    border: 2px solid #444;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    margin-bottom: 15px;
    transition: all 0.3s;
}

[data-theme="light"] .node-icon {
    background: #f0f0f0;
    border-color: #ccc;
}

.node-label {
    font-size: 0.9rem;
    font-weight: 700;
    color: #ccc;
    margin-bottom: 5px;
}

[data-theme="light"] .node-label {
    color: #333;
}

.node-status {
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.8rem;
    color: #555;
}

/* Contract Node */
.node-contract {
    width: 250px;
}

.node-contract .node-icon {
    border-radius: 10px;
    border-color: #bc13fe;
    color: #bc13fe;
}

.code-snippet {
    background: #000;
    border: 1px solid #333;
    padding: 10px;
    font-family: 'Share Tech Mono', monospace;
    font-size: 0.7rem;
    color: #0f0;
    text-align: left;
    border-radius: 6px;
    margin-top: 10px;
    opacity: 0.5;
    width: 100%;
}

[data-theme="light"] .code-snippet {
    background: #1a1a1a;
}

/* Connection Lines */
.connection-line {
    flex: 1;
    height: 4px;
    background: #333;
    position: relative;
    margin: 0 20px;
    top: -30px;
}

[data-theme="light"] .connection-line {
    background: #ddd;
}

.packet {
    position: absolute;
    top: -12px;
    left: 0;
    background: #00f3ff;
    color: #000;
    padding: 4px 10px;
    font-size: 0.7rem;
    font-weight: bold;
    border-radius: 10px;
    opacity: 0;
    box-shadow: 0 0 15px #00f3ff;
}

/* Start Overlay */
.start-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    transition: opacity 0.3s;
}

.run-btn {
    background: #00f3ff;
    border: none;
    padding: 15px 30px;
    font-weight: 800;
    font-size: 1rem;
    border-radius: 50px;
    cursor: pointer;
    box-shadow: 0 0 30px rgba(0, 243, 255, 0.4);
    transition: transform 0.2s;
    color: #000;
}

.run-btn:hover {
    transform: scale(1.1);
}

/* Animation States */
.node.active .node-icon {
    border-color: #00f3ff;
    box-shadow: 0 0 20px rgba(0, 243, 255, 0.3);
    color: #fff;
    transform: scale(1.1);
}

.node.active .node-status {
    color: #00f3ff;
    text-shadow: 0 0 10px #00f3ff;
}

.node-contract.active .node-icon {
    border-color: #bc13fe;
    box-shadow: 0 0 30px rgba(188, 19, 254, 0.5);
}

.node-contract.active .code-snippet {
    opacity: 1;
    border-color: #bc13fe;
}

@keyframes contractTravel {
    0% {
        left: 0;
        opacity: 1;
    }

    100% {
        left: 90%;
        opacity: 1;
    }
}

@media (max-width: 800px) {
    .circuit-board {
        flex-direction: column;
        padding: 30px;
        gap: 40px;
    }

    .connection-line {
        width: 4px;
        height: 50px;
        top: 0;
        margin: 0;
    }

    .packet {
        top: 0;
        left: -12px;
    }

    @keyframes contractTravel {
        0% {
            top: 0;
            opacity: 1;
        }

        100% {
            top: 90%;
            opacity: 1;
        }
    }

    .logic-header h2 {
        font-size: 2rem;
    }
}

