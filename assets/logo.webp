<script>
    /**
     * REALITY COMPARISON SLIDER LOGIC
     */
    (function () {
        const wrapper = document.getElementById('compareWidget');
        const topLayer = document.getElementById('cmpTopLayer');
        const handle = document.getElementById('cmpDragHandle');

        if (!wrapper || !topLayer || !handle) return;

        let isDragging = false;

        wrapper.addEventListener('mousedown', () => isDragging = true);
        window.addEventListener('mouseup', () => isDragging = false);
        wrapper.addEventListener('touchstart', () => isDragging = true);
        window.addEventListener('touchend', () => isDragging = false);

        let rafPending = false;
        const move = (e) => {
            if (!isDragging || rafPending) return;
            rafPending = true;

            requestAnimationFrame(() => {
                let clientX = e.clientX;
                if (e.touches && e.touches.length > 0) {
                    clientX = e.touches[0].clientX;
                }

                const rect = wrapper.getBoundingClientRect();
                let offsetX = clientX - rect.left;

                if (offsetX < 0) offsetX = 0;
                if (offsetX > rect.width) offsetX = rect.width;

                const percentage = (offsetX / rect.width) * 100;
                topLayer.style.width = percentage + "%";
                handle.style.left = percentage + "%";
                rafPending = false;
            });
        };

        wrapper.addEventListener('mousemove', move);
        wrapper.addEventListener('touchmove', move);

        // Initial Animation
        setTimeout(() => {
            topLayer.style.transition = "width 1s ease";
            handle.style.transition = "left 1s ease";
            topLayer.style.width = "60%";
            handle.style.left = "60%";

            setTimeout(() => {
                topLayer.style.transition = "none";
                handle.style.transition = "none";
            }, 1000);
        }, 500);
    })();
</script>
