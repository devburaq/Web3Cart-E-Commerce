    function switchRegion(region, btnElement) {
        const card = document.getElementById('productCard');
        const title = document.getElementById('prodTitle');
        const stock = document.getElementById('prodStock');
        const desc = document.getElementById('prodDesc');
        const price = document.getElementById('prodPrice');
        const icon = document.getElementById('cryptoIcon');
        const buyBtn = document.getElementById('buyBtn');
        const glow = document.querySelector('.card-glow');

        // Update Button States
        document.querySelectorAll('.region-btn').forEach(b => b.classList.remove('active'));
        btnElement.classList.add('active');

        // 1. Trigger Glitch Animation
        card.classList.add('glitching');

        // 2. Update Content (Delay for effect)
        setTimeout(() => {
            const info = geoData[region];

            title.innerText = info.title;
            stock.innerText = info.stock;
            desc.innerText = info.desc;
            price.innerText = info.price;
            icon.innerText = info.icon;
            buyBtn.innerText = info.btn;

            stock.style.color = info.accent;
            stock.style.background = hexToRgba(info.accent, 0.1);
            buyBtn.style.background = info.accent;
            glow.style.background = `radial-gradient(circle, ${hexToRgba(info.accent, 0.3)} 0%, transparent 70%)`;

            if (region === 'ae') {
                desc.style.direction = "rtl";
                title.style.direction = "rtl";
            } else {
                desc.style.direction = "ltr";
                title.style.direction = "ltr";
            }

            card.classList.remove('glitching');
        }, 300);
    }

    function hexToRgba(hex, alpha) {
        let r = parseInt(hex.slice(1, 3), 16),
            g = parseInt(hex.slice(3, 5), 16),
            b = parseInt(hex.slice(5, 7), 16);
        return `rgba(${r}, ${g}, ${b}, ${alpha})`;
