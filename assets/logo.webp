<script>
    /**
     * Web3Cart Dopamine Simulator Logic
     * Handles audio playback and notification simulation for the hero section.
     */
    (function () {
        // Audio element for coin sound
        const coinSound = new Audio('https://web3cart.site/assets/sounds/coin.mp3');
        coinSound.volume = 0.5;

        let currentBalance = 0.00;
        const notifList = document.getElementById('notifList');
        const balanceDisplay = document.getElementById('totalBalance');

        // Update Clock
        function updatePhoneClock() {
            const now = new Date();
            const clockEl = document.getElementById('phoneClock');
            const dateEl = document.getElementById('phoneDate');
            if (clockEl) clockEl.innerText = now.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            if (dateEl) dateEl.innerText = now.toLocaleDateString('en-US', { weekday: 'long', month: 'short', day: 'numeric' });
        }
        setInterval(updatePhoneClock, 1000);
        updatePhoneClock();

        // Currency data - Extended token list
        const currencies = [
            { code: 'USDT', class: 'icon-usdt', icon: '' },
            { code: 'ETH', class: 'icon-eth', icon: '' },
            { code: 'BNB', class: 'icon-bnb', icon: '' },
            { code: 'USDC', class: 'icon-usdc', icon: '$' },
            { code: 'SOL', class: 'icon-sol', icon: '' },
            { code: 'AVAX', class: 'icon-avax', icon: 'A' },
            { code: 'ARB', class: 'icon-arb', icon: '' },
            { code: 'OP', class: 'icon-op', icon: '' },
            { code: 'DAI', class: 'icon-dai', icon: '' },
            { code: 'WBTC', class: 'icon-wbtc', icon: '' },
            { code: 'POL', class: 'icon-pol', icon: '' }
        ];

        /**
         * Generate random wallet address format
         * @returns {string} Truncated wallet address like "0x7A4E...9F12"
         */
        function generateWalletAddress() {
            const chars = '0123456789ABCDEF';
            let start = '0x';
            let end = '';
            for (let i = 0; i < 4; i++) {
                start += chars[Math.floor(Math.random() * chars.length)];
                end += chars[Math.floor(Math.random() * chars.length)];
            }
            return start + '...' + end;
        }

        /**
         * Triggers the "Sale" simulation
         */
        window.triggerDopamine = function () {
            // 1. Play coin sound
            coinSound.currentTime = 0;
            coinSound.play().catch(() => { });

            // 2. Vibration feedback
            if (navigator.vibrate) navigator.vibrate(50);

            // 3. Animate Phone
            const phone = document.getElementById('phoneMockup');
            if (phone) {
                phone.style.transform = "scale(0.98)";
                setTimeout(() => phone.style.transform = "", 100);
            }

            // 4. Generate Data
            const amount = (Math.random() * (200 - 20) + 20).toFixed(2);
            const currency = currencies[Math.floor(Math.random() * currencies.length)];
            const walletAddress = generateWalletAddress();

            // 5. Update Balance with Count-up
            const startVal = currentBalance;
            currentBalance += parseFloat(amount);

            let startTimestamp = null;
            const duration = 500;

            const step = (timestamp) => {
                if (!startTimestamp) startTimestamp = timestamp;
                const progress = Math.min((timestamp - startTimestamp) / duration, 1);
                const currentVal = startVal + (parseFloat(amount) * progress);
                if (balanceDisplay) balanceDisplay.innerText = '$' + currentVal.toFixed(2);
                if (progress < 1) window.requestAnimationFrame(step);
            };
            window.requestAnimationFrame(step);

            // 6. Create Notification Card
            const card = document.createElement('div');
            card.className = 'notif-card';
            card.innerHTML = `
            <div class="app-icon ${currency.class}">${currency.icon}</div>
            <div class="notif-content">
                <div class="app-header">
                    <span>Web3cart Wallet</span>
                    <span>Now</span>
                </div>
                <div class="notif-msg">
                    Received <span class="hl-green">${amount} ${currency.code}</span> from ${walletAddress}
                </div>
            </div>
        `;

            // 7. Insert and Cleanup
            if (notifList) {
                notifList.prepend(card);
                if (notifList.children.length > 4) notifList.lastElementChild.remove();
            }
        };
    })();
</script>
