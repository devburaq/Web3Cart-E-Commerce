                    overlay.style.display = 'flex';
                    setTimeout(() => {
                        overlay.classList.add('active');
                        initMatrixRain();
                    }, 50);
                }
            }
        }

        // Attach IntersectionObserver for Matrix Modal Trigger (More efficient than scroll listener)
        document.addEventListener('DOMContentLoaded', function () {
            const pricingSection = document.getElementById('pricing');
            if (pricingSection && !sessionStorage.getItem('matrixChoiceMade')) {
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting && !matrixTriggered) {
                            matrixTriggered = true;
                            const overlay = document.getElementById('matrix-overlay');
                            if (overlay) {
                                overlay.style.display = 'flex';
                                setTimeout(() => {
                                    overlay.classList.add('active');
                                    initMatrixRain();
                                }, 50);
                            }
                            observer.disconnect(); // Only trigger once
                        }
                    });
                }, { rootMargin: '300px 0px 300px 0px' });
                observer.observe(pricingSection);
            }
        });
    })();

