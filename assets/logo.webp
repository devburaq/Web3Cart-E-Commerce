            const yourProfit = totalVolume * (commission / 100);

            totalVol.innerText = currency.format(totalVolume);
            finalResult.innerText = currency.format(yourProfit);
        }

        inVendors.addEventListener('input', calculate);
        inSales.addEventListener('input', calculate);
        inComm.addEventListener('input', calculate);
        calculate();
