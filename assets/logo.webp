        /**
 * style.css
 *
 * Main Stylesheet for Web3Cart (Public & Admin Panel).
 * Supports Light/Dark mode via CSS Variables.
 *
 * @version 2.0.0
 */

/* ================== Global & Variables ================== */
:root {
    /* --- Core Colors --- */
    --primary-color: #1f72bd;
    --primary-hover: #175a9a;
    --success: #2ecc71;
    --danger: #f64e60;
    --warning: #ffa800;
    --info: #3699ff;

    /* --- Light Mode Defaults --- */
    --bg-body: #ffffff;
    --bg-dashboard: #f4f7f9;
    --bg-card: #ffffff;
    --bg-sidebar: #ffffff;
    --bg-input: #ffffff;
    --bg-light: #f8f9fa;
    --bg-hover: #f0f8ff;

    --text-dark: #212529;
    --text-muted: #86909c;
    --text-light: #6c757d;

    --border-color: #e0e0e0;
    --border-color-panel: #eff2f5;

    --shadow-card: 0 5px 20px rgba(0, 0, 0, 0.02);
    --shadow-hover: 0 10px 40px rgba(0, 0, 0, 0.08);

    /* --- Gradients --- */
    --hero-gradient: linear-gradient(to right, #e0f2fe, #f0f4ff, #fce4ec);

    /* --- Font --- */
    --font-family: 'Poppins', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;

    /* --- Panel Variables --- */
    --sidebar-width: 280px;

    /* --- Icon Colors --- */
    --color-blue: #1f72bd;
    --color-red: #dc3545;
    --color-orange: #fd7e14;
    --color-green: #28a745;
    --color-orange-icon: #f59e42;
}

/* ================== Dark Mode Overrides ================== */
[data-theme="dark"] {
    /* --- Dark Mode Colors --- */
    --bg-body: #151521;
    --bg-dashboard: #151521;
    --bg-card: #1e1e2d;
    --bg-sidebar: #1e1e2d;
    --bg-input: #1b1b29;
    --bg-light: #2b2b40;
    --bg-hover: #2a2a3c;

    --text-dark: #ffffff;
    --text-muted: #92929f;
    --text-light: #b5b5c3;

    --border-color: #323248;
    --border-color-panel: #323248;

    --shadow-card: 0 5px 20px rgba(0, 0, 0, 0.2);
    --shadow-hover: 0 10px 40px rgba(0, 0, 0, 0.3);

    /* --- Gradients (Darker) --- */
    --hero-gradient: linear-gradient(to right, #1a1a2e, #16213e, #1a1a2e);
}

*,
*::before,
*::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}

html {
    scroll-behavior: smooth;
    background-color: var(--bg-body);
    color: var(--text-dark);
}

body {
    font-family: var(--font-family);
    font-size: 16px;
    line-height: 1.6;
    color: var(--text-dark);
    background-color: var(--bg-body);
    -webkit-font-smoothing: antialiased;
    transition: background-color 0.3s ease, color 0.3s ease;
}

/* ================== Utility Classes ================== */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
}

a {
    text-decoration: none;
    color: var(--primary-color);
    transition: color 0.3s ease;
}

a:hover {
    color: var(--primary-hover);
}

ul {
    list-style: none;
    padding: 0;
    margin: 0;
}

/* --- Typography --- */
.welcome-text {
    font-size: 0.95rem;
    color: var(--primary-color);
    font-weight: 600;
    margin-bottom: 10px;
}

.heading-xl {
    font-size: 3.2rem;
    font-weight: 700;
    margin-bottom: 15px;
    line-height: 1.2;
    color: var(--text-dark);
}

.text-lead {
    font-size: 1.15rem;
    color: var(--text-light);
    max-width: 550px;
    margin: 0 auto 30px auto;
}

.section-tagline {
    display: block;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--primary-color);
    margin-bottom: 8px;
    text-transform: uppercase;
}

/* --- Buttons --- */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 28px;
    font-size: 1rem;
    font-weight: 500;
    border-radius: 8px;
    cursor: pointer;
    text-align: center;
    transition: all 0.3s ease;
    border: 1px solid transparent;
    white-space: nowrap;
}

.btn-primary {
    background: linear-gradient(90deg, #00ff88, #00c6ff);
    color: #000000 !important;
    border: none;
}

.btn-primary:hover {
    background: linear-gradient(90deg, #00e67a, #00b3e6);
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(0, 255, 136, 0.3);
    color: #000000 !important;
}

.btn-outline {
    background: transparent;
    color: #00ff88;
    border: 2px solid transparent;
    background-image: linear-gradient(var(--bg-card), var(--bg-card)), linear-gradient(90deg, #00ff88, #00c6ff);
    background-origin: border-box;
    background-clip: padding-box, border-box;
}

.btn-outline:hover {
    background: linear-gradient(90deg, rgba(0, 255, 136, 0.15), rgba(0, 198, 255, 0.15));
    color: #00ff88;
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0, 255, 136, 0.2);
}

.btn-success {
    background-color: var(--success);
    color: #ffffff;
    border-color: var(--success);
    font-weight: 600;
    padding: 14px 35px;
}

.btn-success:hover {
    background-color: #27ae60;
    border-color: #27ae60;
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(125, 191, 46, 0.3);
}

.btn-sm {
    padding: 6px 15px;
    font-size: 0.85rem;
    border-radius: 6px;
}

.btn-danger {
    background: var(--danger);
    color: #fff;
    border-color: var(--danger);
}

.btn-danger:hover {
    background: #d63031;
    color: #fff;
}

.btn-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 35px;
    height: 35px;
    border-radius: 50%;
    background: var(--bg-light);
    color: var(--text-muted);
    transition: all 0.2s;
    border: 1px solid var(--border-color);
}

.btn-icon:hover {
    background: var(--primary-color);
    color: #fff;
    border-color: var(--primary-color);
}

.btn-icon.delete:hover {
    background: var(--danger);
    border-color: var(--danger);
}

/* --- Theme Toggle Button --- */
.theme-toggle-btn {
    background: transparent;
    border: 1px solid var(--border-color);
    color: var(--text-dark);
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 1.1rem;
}

.theme-toggle-btn:hover {
    background-color: var(--bg-hover);
    color: var(--primary-color);
    border-color: var(--primary-color);
}

/* ================== Header (Landing Page) ================== */
.header {
    background-color: var(--bg-card);
    border-bottom: 1px solid var(--border-color);
    padding: 20px 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    /* Optional: Add slight transparency/blur if desired, ensuring var use */
}

.header nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

/* Hide mobile menu elements on desktop */
.mobile-menu-toggle,
.mobile-menu-close {
    display: none;
}

.logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-dark);
}

.header .logo img {
    max-height: 40px;
    width: auto;
    display: block;
    line-height: 1;
}

.nav-links {
    display: flex;
    gap: 30px;
    align-items: center;
}

.nav-item {
    font-size: 1rem;
    font-weight: 500;
    color: var(--text-dark);
}

.nav-item:hover {
    color: var(--primary-color);
}

/* ================== Hero Section ================== */
.hero {
    background-color: var(--bg-body);
    padding-top: 80px;
    padding-bottom: 0;
    text-align: center;
    overflow: hidden;
}

.hero-content {
    max-width: 800px;
    margin: 0 auto;
    padding-bottom: 60px;
}

.hero-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 30px;
}

.hero-responsive-banner {
    background: var(--hero-gradient);
    padding: 40px 0;
    text-align: center;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
}

.responsive-container {
    max-width: 900px;
}

.responsive-heading {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 20px;
}

.responsive-features {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 30px;
    font-size: 1rem;
    color: var(--text-dark);
}

.responsive-features span {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 500;
}

.responsive-features i {
    color: var(--color-green);
    font-size: 1.1rem;
}

.hero-device-showcase {
    position: relative;
    padding-top: 0;
    margin-top: -100px;
    padding-bottom: 80px;
    z-index: 10;
}

.device-container {
    position: relative;
    max-width: 1100px;
    height: 700px;
}

.img-mobile,
.img-laptop,
.img-tablet {
    position: absolute;
    border-radius: 15px;
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
    border: 1px solid var(--border-color);
    background-color: var(--bg-card);
}

.img-mobile {
    width: 200px;
    top: 50%;
    left: 10%;
    transform: translateY(-50%);
    z-index: 3;
}

.img-laptop {
    width: 800px;
    top: 10%;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
}

.img-tablet {
    width: 300px;
    top: 60%;
    right: 10%;
    transform: translateY(-50%);
    z-index: 3;
}


/* ================== Sections (General) ================== */
.how-it-works,
.why-us,
.faq,
.pricing-section {
    padding: 100px 0;
    background-color: var(--bg-body);
}

.core-features,
.detailed-features,
.cta,
.footer {
    padding: 100px 0;
    background-color: var(--bg-light);
}

.section-heading {
    text-align: center;
    margin-bottom: 60px;
}

.section-heading h2 {
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 10px;
}

.section-subtitle {
    font-size: 1.1rem;
    color: var(--text-light);
    max-width: 600px;
    margin: 0 auto;
}

/* ================== Cards / Grids ================== */
.step-item,
.faq-item,
.pricing-card {
    background-color: var(--bg-card);
    border-radius: 12px;
    padding: 40px 30px;
    text-align: center;
    box-shadow: var(--shadow-card);
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
}

.step-item:hover,
.faq-item:hover,
.pricing-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-hover);
}

/* --- How It Works --- */
.steps-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
    max-width: 1100px;
    margin: 0 auto;
}

.how-it-works .step-item>i {
    font-size: 3.5rem !important;
    margin-bottom: 25px;
}

.step-item .step-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 15px;
}

.step-item p {
    color: var(--text-light);
    font-size: 0.95rem;
    line-height: 1.5;
}

/* --- Features --- */
.features-grid {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 30px;
}

.feature-grid-item {
    text-align: center;
    padding: 15px 10px;
}

.feature-grid-item i {
    font-size: 2.5rem;
    color: var(--text-muted);
    margin-bottom: 20px;
    transition: all 0.3s ease;
}

.feature-grid-item span {
    display: block;
    font-size: 0.9rem;
    color: var(--text-light);
    font-weight: 500;
    line-height: 1.4;
}

.feature-grid-item:hover i {
    color: var(--primary-color);
    transform: scale(1.1);
}

/* --- Why Us --- */
.why-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    max-width: 1100px;
    margin: 0 auto;
}

.why-item {
    text-align: center;
}

.icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 25px auto;
}

.icon-wrapper i {
    font-size: 2.5rem;
    color: var(--text-muted);
    transition: all 0.3s ease;
}

.why-item:hover .icon-wrapper i {
    color: var(--primary-color);
    transform: scale(1.1);
}

.why-item h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 10px;
}

.why-item p {
    color: var(--text-light);
    font-size: 0.95rem;
    line-height: 1.7;
}

/* --- Detailed Features --- */
.feature-row {
    display: flex;
    align-items: center;
    gap: 60px;
    margin-top: 60px;
}

.feature-row.reverse {
    flex-direction: row-reverse;
}

.feature-image,
.feature-content {
    flex: 1;
}

.feature-image img {
    border-radius: 12px;
    box-shadow: var(--shadow-card);
    border: 1px solid var(--border-color);
}

.feature-content h3 {
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 15px;
}

.feature-content p {
    color: var(--text-light);
    font-size: 1rem;
    line-height: 1.7;
    max-width: 500px;
}

.feature-row.reverse .feature-content {
    text-align: left;
}

/* --- FAQ --- */
.faq-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 25px;
    max-width: 1100px;
    margin: 0 auto;
}

.faq-item {
    padding: 0;
    background-color: var(--bg-card);
    margin-bottom: 20px;
    text-align: left;
}

.faq-question {
    background: none;
    border: none;
    font: inherit;
    color: var(--text-dark);
    width: 100%;
    text-align: left;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    cursor: pointer;
    font-weight: 600;
    font-size: 1rem;
}

.faq-question i {
    transition: transform 0.3s ease;
    color: var(--primary-color);
}

.faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: all 0.4s ease-out;
}

.faq-answer p {
    padding: 0 20px 20px;
    color: var(--text-light);
    font-size: 0.95rem;
    line-height: 1.7;
}

.faq-item.active .faq-answer {
    max-height: 200px;
}

.faq-item.active .faq-question {
    color: var(--primary-color);
}

.faq-item.active .faq-question i {
    transform: rotate(45deg);
}

/* --- Pricing --- */
.pricing-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30px;
    max-width: 1200px;
    margin: 0 auto;
}

.pricing-card {
    display: flex;
    flex-direction: column;
    text-align: center;
}

.pricing-card.recommended {
    border-color: var(--primary-color);
    box-shadow: 0 10px 40px rgba(31, 114, 189, 0.15);
    transform: translateY(-10px);
}

.plan-name {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 10px;
}

.plan-description {
    font-size: 0.9rem;
    color: var(--text-light);
    margin-bottom: 25px;
    min-height: 40px;
}

.plan-price {
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: 10px;
    line-height: 1.1;
}

.plan-price span {
    font-size: 1rem;
    font-weight: 500;
    color: var(--text-light);
    margin-left: 5px;
}

.plan-features {
    list-style: none;
    padding: 25px 0;
    margin: 25px 0;
    border-top: 1px solid var(--border-color);
    border-bottom: 1px solid var(--border-color);
    flex-grow: 1;
    text-align: left;
}

.plan-features li {
    font-size: 0.95rem;
    color: var(--text-light);
    margin-bottom: 15px;
    display: flex;
    align-items: center;
    gap: 10px;
}

.plan-features li i {
    color: var(--color-green);
    font-size: 1.1rem;
    width: 20px;
    text-align: center;
}

.plan-button {
    margin-top: auto;
}

/* Red Pill Style for Pricing Buttons */
.plan-button .btn {
    background: linear-gradient(135deg, #ff0844 0%, #ffb199 100%);
    color: #fff !important;
    border: none;
    border-radius: 50px;
    padding: 14px 35px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 8px 20px rgba(255, 8, 68, 0.3), inset 0 -3px 10px rgba(0, 0, 0, 0.15);
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
}

.plan-button .btn::before {
    content: '';
    position: absolute;
    top: 3px;
    left: 10%;
    width: 80%;
    height: 35%;
    border-radius: 50px;
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0));
    pointer-events: none;
}

.plan-button .btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 0 35px rgba(255, 8, 68, 0.5), 0 12px 25px rgba(255, 8, 68, 0.3);
    color: #fff !important;
}

/* --- CTA --- */
.cta {
    text-align: center;
}

.cta h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 10px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.cta .section-subtitle {
    margin-bottom: 30px;
}

/* --- Footer --- */
.footer {
    padding: 30px 0;
    border-top: 1px solid var(--border-color);
}

.footer-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.copyright {
    font-size: 0.9rem;
    color: var(--text-light);
}

.footer-socials {
    display: flex;
    gap: 20px;
}

.footer-socials a {
    font-size: 1.1rem;
    color: var(--text-light);
}

.footer-socials a:hover {
    color: var(--primary-color);
}

/* ============================================================
   PANEL & ADMIN STYLES
   ============================================================ */

/* --- Layout Container --- */
.app-layout {
    display: flex;
    max-width: 1600px;
    margin: 0 auto;
    padding: 40px;
    gap: 40px;
    min-height: 100vh;
    align-items: flex-start;
    background-color: var(--bg-dashboard);
}

body.dashboard-page {
    background-color: var(--bg-dashboard);
}

/* --- Sidebar --- */
.profile-sidebar {
    width: var(--sidebar-width);
    background: var(--bg-sidebar);
    border-radius: 20px;
    padding: 40px 30px;
    display: flex;
    flex-direction: column;
    flex-shrink: 0;
    position: sticky;
    top: 40px;
    box-shadow: var(--shadow-card);
    z-index: 99;
    max-height: calc(100vh - 80px);
    overflow-y: auto;
    border: 1px solid var(--border-color-panel);
}

.sidebar-user-info {
    text-align: center;
    margin-bottom: 30px;
}

.menu-group {
    margin-bottom: 30px;
}

.menu-label {
    font-size: 0.75rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 15px;
    display: block;
    font-weight: 600;
}

.sidebar-menu a {
    text-decoration: none;
    color: var(--text-light);
    font-weight: 500;
    font-size: 0.95rem;
    display: flex;
    align-items: center;
    padding: 10px 0;
    transition: color 0.2s;
}

.sidebar-menu a i {
    width: 25px;
    margin-right: 8px;
    text-align: center;
}

.sidebar-menu a:hover,
.sidebar-menu a.active {
    color: var(--primary-color);
}

.logout-link {
    color: var(--danger) !important;
}

.sidebar-logo {
    margin-top: auto;
    padding-top: 40px;
}

/* --- Content Area --- */
.main-content-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 30px;
    width: 100%;
    min-width: 0;
}

.content-card {
    background: var(--bg-card);
    border-radius: 20px;
    padding: 35px;
    box-shadow: var(--shadow-card);
    border: 1px solid var(--border-color-panel);
}

.card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25px;
    border-bottom: 1px solid var(--border-color-panel);
    padding-bottom: 15px;
}

.panel-top-section {
    margin-bottom: 30px !important;
}

/* --- Forms (Global) --- */
.form-group {
    margin-bottom: 20px;
    text-align: left;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: var(--text-dark);
}

.form-group input,
.form-group select,
.form-group textarea {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid var(--border-color-panel);
    border-radius: 8px;
    background: var(--bg-input);
    font-family: inherit;
    font-size: 0.95rem;
    color: var(--text-dark);
    transition: border-color 0.2s;
    box-sizing: border-box;
}

.form-group input:focus,
.form-group textarea:focus {
    border-color: var(--primary-color);
    outline: none;
    box-shadow: 0 0 0 3px rgba(31, 114, 189, 0.1);
}

.form-messages-error,
.form-messages-success,
.alert {
    padding: 15px;
    border-radius: 8px;
    margin-bottom: 20px;
    font-weight: 500;
    text-align: left;
}

.form-messages-error,
.alert-danger {
    background: rgba(246, 78, 96, 0.1);
    color: var(--danger);
    border: 1px solid rgba(246, 78, 96, 0.2);
}

.form-messages-success,
.alert-success {
    background: rgba(46, 204, 113, 0.1);
    color: var(--success);
    border: 1px solid rgba(46, 204, 113, 0.2);
}

/* --- Profile Header --- */
.profile-header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.profile-info-left {
    display: flex;
    align-items: center;
}

.avatar-circle {
    width: 60px;
    height: 60px;
    background: var(--bg-hover);
    border-radius: 10%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    margin-right: 15px;
}

.user-welcome h2 {
    margin: 0;
    font-size: 1.3rem;
    color: var(--text-dark);
}

.user-welcome p {
    margin: 0;
    color: var(--text-muted);
    font-size: 0.9rem;
}

/* --- User Dashboard Grid --- */
.user-dashboard-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 30px;
    margin-bottom: 30px;
}

.info-grid-user {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    border-bottom: 1px solid var(--border-color-panel);
    padding-bottom: 20px;
    gap: 20px;
}

.last-entry {
    padding-top: 20px;
    font-size: 0.9rem;
    color: var(--text-muted);
}

.info-detail {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.detail-label {
    display: block;
    font-size: 0.8rem;
    color: var(--text-muted);
    font-weight: 600;
    text-transform: uppercase;
}

.detail-value {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-dark);
}

.plan-badge {
    border: 1px solid var(--primary-color);
    color: var(--primary-color);
    background: rgba(31, 114, 189, 0.05);
    font-weight: 700;
    padding: 4px 10px;
    border-radius: 6px;
    font-size: 0.9rem;
}

.info-detail-center {
    text-align: center;
}

.open-request-box {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    border: none;
    padding: 0;
}

.open-request-box i {
    font-size: 3rem;
    color: var(--color-orange-icon);
    margin-bottom: 15px;
}

.open-request-box h3 {
    font-size: 1.2rem;
    margin-bottom: 5px;
    color: var(--text-dark);
}

.open-request-box strong {
    font-size: 2rem;
    color: var(--primary-color);
}

/* --- License Card --- */
.license-card {
    background: var(--bg-card);
    border: 1px solid var(--border-color-panel);
    border-radius: 12px;
    padding: 30px;
    box-shadow: var(--shadow-card);
    display: flex;
    flex-direction: column;
}

.license-card-header,
.action-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid var(--border-color-panel);
    padding-bottom: 15px;
    margin-bottom: 25px;
}

.license-title-group {
    display: flex;
    align-items: center;
    gap: 10px;
}

.license-title-group i {
    color: var(--primary-color);
    font-size: 1.2rem;
}

.license-title-group h3 {
    font-size: 1.4rem;
    font-weight: 700;
    margin: 0;
    color: var(--text-dark);
}

.license-active-badge,
.license-status.active {
    background: rgba(46, 204, 113, 0.1);
    color: var(--success);
    padding: 5px 15px;
    border-radius: 20px;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.9rem;
}

.license-detail-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 20px;
    align-items: center;
    border-bottom: 1px solid var(--border-color-panel);
    padding-bottom: 25px;
    margin-bottom: 30px;
}

.license-product-group {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.license-product-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-dark);
    display: block;
    margin-bottom: 5px;
}

.license-domain {
    color: var(--text-muted);
    font-size: 0.95rem;
}

.date-section-center {
    text-align: center;
}

.date-section-right {
    text-align: right;
}

.lifetime-date {
    color: #e17055;
}

.license-footer-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;
    gap: 20px;
}

.license-key-group {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 5px;
}

.license-key-box {
    background-color: var(--bg-light);
    border: 1px solid var(--border-color-panel);
    border-radius: 6px;
    padding: 10px 15px;
    max-width: 100%;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    gap: 10px;
}

.key-label {
    font-size: 0.95rem;
    color: var(--text-muted);
    font-weight: 500;
}

.key-value {
    font-family: monospace;
    font-size: 1rem;
    color: var(--text-dark);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    flex-grow: 1;
    min-width: 0;
    margin-right: 10px;
}

.copy-icon,
.copy-btn {
    color: var(--primary-color);
    cursor: pointer;
    font-size: 1.1rem;
    background: none;
    border: none;
    flex-shrink: 0;
}

.license-download-group {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 5px;
}

.download-label-text {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text-dark);
    display: block;
}

.btn-download-large {
    background: var(--primary-color);
    color: #fff;
    padding: 12px 30px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.2s;
    border: none;
}

.btn-download-large:hover {
    background: var(--primary-hover);
    color: #fff;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(31, 114, 189, 0.2);
}

/* --- Payment UI --- */
.payment-container {
    text-align: center;
    padding: 20px 0;
}

.pay-price {
    font-size: 3rem;
    font-weight: 700;
    color: var(--primary-color);
    margin: 15px 0;
    line-height: 1;
}

.pay-tabs {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: 25px;
    flex-wrap: wrap;
}

.net-tab {
    background: transparent;
    border: 1px solid var(--border-color-panel);
    color: var(--text-muted);
    padding: 8px 20px;
    border-radius: 50px;
    cursor: pointer;
    font-weight: 600;
    transition: 0.2s;
}

.net-tab.active,
.net-tab:hover {
    border-color: var(--primary-color);
    color: var(--primary-color);
    background: rgba(31, 114, 189, 0.1);
}

.pay-btn {
    background: var(--primary-color);
    color: #fff;
    border: none;
    padding: 15px 50px;
    border-radius: 10px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    width: 100%;
    max-width: 350px;
}

.pay-btn:hover {
    background: var(--primary-hover);
    box-shadow: 0 10px 20px rgba(31, 114, 189, 0.15);
}

/* --- Auth Pages --- */
.auth-page {
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
    min-height: 100vh !important;
    background-color: var(--bg-dashboard) !important;
    width: 100%;
    padding: 20px;
}

.auth-container {
    width: 100%;
    max-width: 450px;
    background: var(--bg-card);
    padding: 40px;
    border-radius: 16px;
    box-shadow: var(--shadow-card);
    text-align: center;
    border: 1px solid var(--border-color-panel);
}

.auth-container .logo-text {
    margin-bottom: 10px;
    font-size: 1.8rem;
    font-weight: 700;
    color: var(--text-dark);
}

.auth-footer {
    margin-top: 25px;
    font-size: 0.95rem;
    color: var(--text-muted);
}

/* --- Tables & Admin Widgets --- */
.custom-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
}

.custom-table th {
    text-align: left;
    color: var(--text-muted);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    padding: 15px;
    border-bottom: 1px solid var(--border-color-panel);
    white-space: nowrap;
}

.custom-table td {
    padding: 20px 15px;
    border-bottom: 1px solid var(--border-color-panel);
    color: var(--text-dark);
    vertical-align: middle;
}

.status-badge.status-open {
    background: rgba(34, 166, 179, 0.1);
    color: #22a6b3;
    border: none;
}

.status-badge.status-closed {
    background: rgba(164, 176, 190, 0.1);
    color: #a4b0be;
    border: none;
}

.status-badge.status-completed {
    background: rgba(46, 204, 113, 0.1);
    color: var(--success);
    border: none;
}

.status-badge.status-pending,
.status-badge.status-pending_payment {
    background: rgba(255, 168, 0, 0.1);
    color: var(--warning);
    border: none;
}

.testnet-alert-box {
    width: 100%;
    border: 1px solid var(--warning);
    background: rgba(255, 168, 0, 0.1);
    color: var(--text-dark);
    padding: 20px;
    border-radius: 12px;
    margin-top: 20px;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 15px;
}

.testnet-alert-content {
    display: flex;
    align-items: center;
    gap: 15px;
    flex: 1;
}

.testnet-alert-icon {
    font-size: 2rem;
    color: var(--warning);
}

.testnet-alert-text h4 {
    margin: 0 0 5px 0;
    font-size: 1.1rem;
    color: var(--text-dark);
}

.testnet-alert-text p {
    margin: 0;
    font-size: 0.95rem;
    color: var(--text-muted);
}

.info-grid {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 20px;
}

.info-item {
    flex: 1;
    min-width: 150px;
}

.support-box {
    border: 1px solid var(--border-color-panel);
    border-radius: 12px;
    padding: 15px 20px;
    display: flex;
    align-items: center;
    gap: 15px;
    transition: transform 0.2s;
}

.support-box:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.03);
}

.support-box i {
    font-size: 1.5rem;
}

/* --- Wallet Modal --- */
.wallet-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 9999;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
}

.wallet-modal-overlay.visible {
    opacity: 1;
    visibility: visible;
}

.wallet-modal-content {
    background: var(--bg-card);
    width: 90%;
    max-width: 400px;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    overflow: hidden;
    transform: translateY(20px);
    transition: transform 0.3s;
}

.wallet-modal-overlay.visible .wallet-modal-content {
    transform: translateY(0);
}

.wallet-modal-header {
    padding: 15px 20px;
    border-bottom: 1px solid var(--border-color-panel);
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: var(--bg-light);
}

.wallet-modal-header h4 {
    margin: 0;
    font-size: 1.1rem;
    color: var(--text-dark);
}

.wallet-modal-close-btn {
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--text-muted);
}

.wallet-modal-body {
    padding: 20px;
}

.wallet-button {
    display: flex;
    align-items: center;
    width: 100%;
    padding: 12px 15px;
    margin-bottom: 10px;
    background: var(--bg-card);
    border: 1px solid var(--border-color-panel);
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.2s;
    text-align: left;
}

.wallet-button:hover {
    background: var(--bg-hover);
    border-color: var(--primary-color);
}

.wallet-button img {
    width: 32px;
    height: 32px;
    margin-right: 15px;
}

.wallet-button span {
    font-size: 1rem;
    font-weight: 500;
    color: var(--text-dark);
}

/* ================== Docs Section ================== */
.docs-section {
    background-color: var(--bg-body);
    padding: 60px 0;
    min-height: 80vh;
}

/* Layout Wrapper - Ensures Sidebar and Content are side-by-side */
.docs-layout {
    display: flex;
    align-items: flex-start;
    gap: 50px;
    position: relative;
    flex-wrap: nowrap;
}

/* Sidebar Styling */
.docs-sidebar {
    width: 280px;
    flex-shrink: 0;
    border-right: 1px solid var(--border-color);
    padding-right: 20px;
    position: sticky;
    top: 100px;
    max-height: calc(100vh - 120px);
    overflow-y: auto;
}

/* Content Area Styling */
.docs-content {
    flex-grow: 1;
    width: 100%;
    min-width: 0;
    /* Prevents flex overflow */
    padding-bottom: 50px;
}

/* Typography & Elements */
.docs-category-title {
    display: block;
    font-size: 0.85rem;
    text-transform: uppercase;
    color: var(--text-dark);
    font-weight: 700;
    margin-bottom: 12px;
    letter-spacing: 0.5px;
}

.docs-article-link {
    display: block;
    padding: 8px 12px;
    color: var(--text-light);
    border-radius: 6px;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all 0.2s ease;
    border-left: 2px solid transparent;
}

.docs-article-link:hover {
    color: var(--primary-color);
    background-color: var(--bg-hover);
}

.docs-article-item.active .docs-article-link {
    background-color: rgba(31, 114, 189, 0.08);
    color: var(--primary-color);
    font-weight: 600;
    border-left-color: var(--primary-color);
}

.docs-welcome-box {
    text-align: center;
    padding: 60px 40px;
    background-color: var(--bg-light);
    border-radius: 12px;
    border: 1px solid var(--border-color);
}

.docs-welcome-box h1 {
    color: var(--text-dark);
    margin-bottom: 15px;
}

.docs-welcome-box p {
    color: var(--text-light);
}

.docs-article-header {
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 25px;
    margin-bottom: 35px;
}

.docs-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 15px;
    line-height: 1.2;
}

.docs-meta {
    font-size: 0.9rem;
    color: var(--text-muted);
    display: flex;
    align-items: center;
    gap: 10px;
}

.docs-body {
    color: var(--text-dark);
    line-height: 1.8;
    font-size: 1.05rem;
}

.docs-body h2 {
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-top: 40px;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 1px solid var(--border-color);
}

.docs-body h3 {
    font-size: 1.4rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-top: 30px;
    margin-bottom: 15px;
}

.docs-body p,
.docs-body ul,
.docs-body ol {
    margin-bottom: 20px;
    color: var(--text-light);
}

.docs-body blockquote {
    border-left: 4px solid var(--primary-color);
    padding: 15px 25px;
    margin: 30px 0;
    background-color: var(--bg-light);
    border-radius: 0 8px 8px 0;
    font-style: italic;
    color: var(--text-dark);
}

.docs-body img {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 25px 0;
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-card);
}

.docs-body pre {
    background: #282c34;
    color: #abb2bf;
    padding: 20px;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 30px;
    font-size: 0.9rem;
    line-height: 1.5;
}

.docs-body code {
    font-family: 'Courier New', Courier, monospace;
    background-color: rgba(31, 114, 189, 0.1);
    padding: 2px 6px;
    border-radius: 4px;
    color: var(--primary-color);
    font-size: 0.9em;
}

.docs-body pre code {
    background-color: transparent;
    color: inherit;
    padding: 0;
}

/* Responsive Rules */
@media (max-width: 992px) {
    .docs-layout {
        flex-direction: column;
        gap: 30px;
    }

    .docs-sidebar {
        width: 100%;
        border-right: none;
        border-bottom: 1px solid var(--border-color);
        padding-right: 0;
        padding-bottom: 20px;
        position: static;
        max-height: none;
    }
}

/* --- Responsive --- */
@media (max-width: 1024px) {
    .hero-device-showcase {
        margin-top: -50px;
    }

    .device-container {
        height: 550px;
    }

    .img-mobile {
        width: 160px;
        left: 5%;
    }

    .img-laptop {
        width: 650px;
    }

    .img-tablet {
        width: 250px;
        right: 5%;
    }

    .steps-grid,
    .pricing-grid {
        grid-template-columns: repeat(2, 1fr);
    }

    .features-grid {
        grid-template-columns: repeat(4, 1fr);
    }

    .why-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (max-width: 992px) {
    .app-layout {
        flex-direction: column;
        padding: 20px;
        gap: 20px;
    }

    .profile-sidebar {
        width: 100%;
        position: relative;
        top: 0;
        max-height: none;
        overflow-y: visible;
        margin-bottom: 20px;
        padding: 30px;
    }

    .user-dashboard-grid {
        grid-template-columns: 1fr;
    }

    .license-detail-grid {
        grid-template-columns: 1fr !important;
        text-align: center !important;
    }

    .license-product-group {
        align-items: center;
    }

    .date-section-center,
    .date-section-right {
        text-align: center !important;
    }

    .license-footer-row {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .license-key-group,
    .license-download-group {
        align-items: center;
        width: 100%;
    }

    .docs-layout {
        flex-direction: column;
        gap: 30px;
    }

    .docs-sidebar {
        width: 100%;
        border-right: none;
        border-bottom: 1px solid var(--border-color);
        padding-right: 0;
        padding-bottom: 20px;
        position: static;
        max-height: none;
    }

    div[style*="grid-template-columns"] {
        display: flex !important;
        flex-direction: column !important;
        gap: 25px !important;
    }
}

@media (max-width: 768px) {

    /* === MOBILE NAVIGATION === */
    .nav-links {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--bg-card);
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 25px;
        z-index: 999;
    }

    .nav-links.active {
        display: flex;
    }

    .nav-links .nav-item {
        font-size: 1.3rem;
    }

    .mobile-menu-toggle {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 40px;
        height: 40px;
        background: transparent;
        border: 1px solid var(--border-color);
        border-radius: 8px;
        cursor: pointer;
        gap: 5px;
        z-index: 1001;
    }

    .mobile-menu-toggle span {
        display: block;
        width: 22px;
        height: 2px;
        background: var(--text-dark);
        transition: all 0.3s ease;
    }

    .mobile-menu-toggle.active span:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
    }

    .mobile-menu-toggle.active span:nth-child(2) {
        opacity: 0;
    }

    .mobile-menu-toggle.active span:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -5px);
    }

    .mobile-menu-close {
        display: block;
        position: absolute;
        top: 20px;
        right: 20px;
        font-size: 2rem;
        background: none;
        border: none;
        color: var(--text-dark);
        cursor: pointer;
    }

    /* === HERO SECTION === */
    .hero {
        padding-top: 50px;
    }

    .heading-xl {
        font-size: 2rem;
    }

    .text-lead {
        font-size: 1rem;
    }

    .hero-buttons {
        flex-direction: column;
        gap: 12px;
    }

    .hero-buttons .btn {
        width: 100%;
    }

    .responsive-heading {
        font-size: 1.2rem;
    }

    .responsive-features {
        flex-direction: column;
        gap: 15px;
    }

    .hero-device-showcase {
        margin-top: 0;
        padding-bottom: 40px;
    }

    .device-container {
        height: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        padding: 20px;
    }

    .img-mobile,
    .img-laptop,
    .img-tablet {
        position: static;
        transform: none;
    }

    .img-laptop {
        width: 100%;
        max-width: 400px;
        order: 1;
    }

    .img-mobile {
        width: 140px;
        display: none;
    }

    .img-tablet {
        width: 200px;
        display: none;
    }

    /* === SECTION HEADINGS === */
    .section-heading h2 {
        font-size: 1.75rem;
    }

    .section-subtitle {
        font-size: 0.95rem;
    }

    /* === HOW IT WORKS (Single Column) === */
    .steps-grid {
        grid-template-columns: 1fr !important;
        gap: 20px;
    }

    .step-item {
        padding: 30px 20px;
    }

    /* === CORE FEATURES (2 Columns) === */
    .features-grid {
        grid-template-columns: repeat(2, 1fr) !important;
        gap: 20px;
    }

    .feature-grid-item i {
        font-size: 2rem;
    }

    .feature-grid-item span {
        font-size: 0.8rem;
    }

    /* === WHY US (Single Column) === */
    .why-grid {
        grid-template-columns: 1fr !important;
        gap: 30px;
    }

    /* === KEY FEATURES / DETAILED FEATURES (Stacked) === */
    .feature-row,
    .feature-row.reverse {
        flex-direction: column !important;
        gap: 30px;
        margin-top: 40px;
    }

    .feature-image,
    .feature-content {
        width: 100%;
    }

    .feature-image {
        order: 1;
    }

    .feature-content {
        order: 2;
        text-align: center;
    }

    .feature-content h3 {
        font-size: 1.4rem;
    }

    .feature-content p {
        max-width: 100%;
    }

    /* === FAQ (Single Column) === */
    .faq-grid {
        grid-template-columns: 1fr !important;
        gap: 15px;
    }

    .faq-question {
        font-size: 0.95rem;
        padding: 15px;
    }

    .faq-answer p {
        font-size: 0.9rem;
        padding: 0 15px 15px;
    }

    /* === PRICING (Single Column) === */
    .pricing-grid {
        grid-template-columns: 1fr;
    }

    .pricing-card.recommended {
        transform: none;
    }

    .plan-price {
        font-size: 2.8rem;
    }

    /* === CTA === */
    .cta h2 {
        font-size: 1.75rem;
    }

    /* === LICENSE KEY === */
    .license-key-box {
        flex-direction: column;
        align-items: stretch;
    }

    .key-value {
        white-space: normal;
        word-break: break-all;
        margin-right: 0;
        margin-bottom: 10px;
        text-align: center;
    }

    .copy-btn {
        align-self: center;
    }
}

/* --- Back to Top Button --- */
.back-to-top-btn {
    position: fixed;
    bottom: 30px;
    right: 30px;
    width: 45px;
    height: 45px;
    background: linear-gradient(135deg, #00ff88, #00c6ff);
    color: #000;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    box-shadow: 0 4px 15px rgba(0, 255, 136, 0.3);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    z-index: 9999;
    font-size: 1.2rem;
}

.back-to-top-btn.visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
}

.back-to-top-btn:hover {
    background: linear-gradient(135deg, #00e67a, #00b3e6);
    transform: translateY(-5px);
    color: #000;
    box-shadow: 0 8px 25px rgba(0, 255, 136, 0.4);
}

/* ============================================================ */
/* ==          BLUEPRINT STEPS SECTION                       == */
/* ============================================================ */
.blueprint-section {
    background-color: var(--bg-body);
    padding: 80px 20px;
}

.blueprint-container {
    max-width: 1200px;
    margin: 0 auto;
}

.blueprint-header {
    text-align: center;
    margin-bottom: 60px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
}

.blueprint-header .blueprint-badge {
    color: var(--color-green);
    background: rgba(0, 255, 136, 0.1);
    padding: 5px 15px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 2px;
    text-transform: uppercase;
    display: inline-block;
}

.blueprint-header h2 {
    font-size: 2.5rem;
    margin-top: 20px;
    margin-bottom: 20px;
    line-height: 1.1;
    color: var(--text-dark);
}

.blueprint-header .bp-highlight {
    color: var(--color-green);
}

.blueprint-header p {
    color: var(--text-muted);
    font-size: 1.1rem;
    line-height: 1.6;
}

.blueprint-grid {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: 20px;
}

.bp-card {
    flex: 1;
    background: var(--bg-card);
    padding: 30px 20px;
    border-radius: 16px;
    border: 1px solid var(--border-color);
    transition: transform 0.3s, border-color 0.3s, box-shadow 0.3s;
    min-height: 260px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
}

.bp-card:hover {
    transform: translateY(-10px);
    border-color: rgba(0, 255, 136, 0.3);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
}

.bp-icon {
    width: 60px;
    height: 60px;
    background: var(--bg-hover);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20px;
    color: var(--text-dark);
}

.bp-icon svg {
    width: 28px;
    height: 28px;
}

.bp-content h3 {
    font-size: 1.15rem;
    margin-bottom: 15px;
    font-weight: 700;
    color: var(--text-dark);
}

.bp-content p {
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.5;
}

/* Highlight Last Card */
.bp-card.bp-highlight-card {
    border-color: var(--color-green);
    background: radial-gradient(circle at center, rgba(0, 255, 136, 0.05), var(--bg-card));
}

.bp-highlight-card .bp-icon {
    background: var(--color-green);
    color: #000;
    box-shadow: 0 0 20px rgba(0, 255, 136, 0.4);
}

.bp-highlight-card h3 {
    color: var(--color-green);
}

/* Arrow */
.bp-arrow {
    align-self: center;
    font-size: 2rem;
    color: var(--border-color);
    font-weight: 300;
}

/* Responsive */
@media (max-width: 900px) {
    .blueprint-grid {
        flex-direction: column;
    }

    .bp-arrow {
        display: none;
    }

    .blueprint-header h2 {
        font-size: 1.8rem;
    }

    .bp-card {
        width: 100%;
        min-height: auto;
    }
}

/* ============================================================ */
/* ==          REALITY COMPARISON SECTION                    == */
/* ============================================================ */
.compare-section {
    padding: 80px 20px;
    background: var(--bg-body);
}

.compare-header {
    text-align: center;
    margin-bottom: 40px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
}

.compare-header .compare-badge {
    color: var(--color-green);
    background: rgba(0, 255, 136, 0.1);
    padding: 5px 15px;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 2px;
    text-transform: uppercase;
    display: inline-block;
}

.compare-header h2 {
    font-size: 2.2rem;
    margin-top: 20px;
    margin-bottom: 15px;
    color: var(--text-dark);
}

.compare-header .cmp-highlight {
    color: var(--color-green);
}

.compare-header p {
    color: var(--text-muted);
    font-size: 1rem;
}

.comparison-wrapper {
    position: relative;
    width: 100%;
    max-width: 1000px;
    height: 500px;
    margin: 0 auto;
    border-radius: 20px;
    overflow: hidden;
    border: 1px solid var(--border-color);
    box-shadow: var(--shadow-card);
    user-select: none;
}

.cmp-layer {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

/* Old World (Red) */
.cmp-layer-old {
    background: radial-gradient(circle at center, #1a0505, #080000);
    display: flex;
    align-items: center;
    justify-content: center;
}

[data-theme="light"] .cmp-layer-old {
    background: radial-gradient(circle at center, #fff0f0, #ffeaea);
}

/* New World (Green) */
.cmp-layer-new {
    width: 50%;
    background: radial-gradient(circle at center, #001a0f, #000a05);
    border-right: 2px solid var(--color-green);
    z-index: 2;
}

[data-theme="light"] .cmp-layer-new {
    background: radial-gradient(circle at center, #e8fff0, #f0fff5);
}

.cmp-content-box {
    position: absolute;
    width: 1000px;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 60px;
    box-sizing: border-box;
}

.cmp-side-content {
    width: 42%;
    display: flex;
    flex-direction: column;
    gap: 18px;
}

.cmp-title {
    font-family: 'Share Tech Mono', monospace;
    font-size: 2.2rem;
    text-transform: uppercase;
    line-height: 1;
    margin-bottom: 10px;
}

.cmp-feature-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.cmp-feature-item {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 1rem;
    font-weight: 600;
}

.cmp-icon {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 6px;
    font-size: 1.1rem;
    flex-shrink: 0;
}

/* Old World Styles */
.cmp-old-content .cmp-title {
    color: #ff3333;
    text-shadow: 0 0 15px rgba(255, 51, 51, 0.5);
}

[data-theme="light"] .cmp-old-content .cmp-title {
    text-shadow: none;
}

.cmp-old-content .cmp-feature-item {
    color: #999;
}

[data-theme="light"] .cmp-old-content .cmp-feature-item {
    color: #666;
}

.cmp-old-content .cmp-icon {
    background: rgba(255, 51, 51, 0.1);
    color: #ff3333;
    border: 1px solid #ff3333;
}

.cmp-old-content .cmp-side-content {
    margin-left: auto;
    text-align: right;
    align-items: flex-end;
}

.cmp-old-content .cmp-feature-item {
    flex-direction: row-reverse;
}

/* New World Styles */
.cmp-new-content .cmp-title {
    color: var(--color-green);
    text-shadow: 0 0 15px rgba(0, 255, 136, 0.5);
}

[data-theme="light"] .cmp-new-content .cmp-title {
    text-shadow: none;
}

.cmp-new-content .cmp-feature-item {
    color: #fff;
}

[data-theme="light"] .cmp-new-content .cmp-feature-item {
    color: #1a1a1a;
}

.cmp-new-content .cmp-icon {
    background: rgba(0, 255, 136, 0.1);
    color: var(--color-green);
    border: 1px solid var(--color-green);
}

/* Slider Handle */
.cmp-handle {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 4px;
    background: #fff;
    cursor: ew-resize;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 0 10px #fff;
}

.cmp-handle-circle {
    width: 44px;
    height: 44px;
    background: #000;
    border: 2px solid #fff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 1.1rem;
    box-shadow: 0 0 15px rgba(255, 255, 255, 0.5);
}

[data-theme="light"] .cmp-handle-circle {
    background: #fff;
    color: #000;
    border-color: #333;
}

/* Glitch Effect */
